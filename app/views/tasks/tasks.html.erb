<h1>My Task</h1>
<ul>
  <% @tasks_list.each do |task| %>

  <li><% if task.completed %>
        <i class="fa fa-check-square-o"></i>
      <% else %>
        <i class="fa fa-square-o"></i>
      <% end %>
  <%= link_to task.title, task_path(task.id) %> - <i> <%= link_to "Delete", task_path(task), data: {turbo_method: :Delete, turbo_confirm:"Are your sure?"} %></i>
  <%= link_to "Edit", edit_path(task), method: :patch %>
  </li>
  <% end %>
</ul>

<%= link_to "New task", tasks_new_path%>
